            <label><input type="radio" name="q3" value="4"><img src="imagens/roug.png" width="50"> 5</label>
          </div>
  
    <div class="question" data-answer="0">
            <h3>3. Me conhecendo, qual dessas eu me sinto confortável?</h3>
            <div class="options">
              <label><input type="radio" name="q3" value="0"><img src="imagens/roug.png" width="50"> Elefante</label>
              <label><input type="radio" name="q3" value="1"><img src="imagens/roug.png" width="50"> Hipopótamo</label>
              <label><input type="radio" name="q3" value="2"><img src="imagens/roug.png" width="50"> Girafa</label>
              <label><input type="radio" name="q3" value="3"><img src="imagens/roug.png" width="50"> Urso</label>
              <label><input type="radio" name="q3" value="4"><img src="imagens/roug.png" width="50"> Rinoceronte</label>
            </div>

      </div>
    </form>
    <button id="nextBtn">Próxima</button>
    <div id="result" style="display:none;"></div>
  </div>
  <script>
    function mostrarResultado() {
    let corretas = 0;
    let resumo = "<h3>Resultado:</h3><ol>";
  
    perguntas.forEach((pergunta, i) => {
      const correta = pergunta.getAttribute('data-answer');
      const labels = pergunta.querySelectorAll('label');
  
      labels.forEach(label => {
        const input = label.querySelector('input');
        label.classList.remove('correct', 'incorrect', 'selected');
  
        if (input.value === correta) {
          label.classList.add('correct'); // Gabarito
        }
  
        if (respostasSelecionadas[i] === input.value && input.value !== correta) {
          label.classList.add('incorrect'); // Erro do usuário
        }
  
        input.disabled = true; // Impede mudar depois de finalizar
      });
  
      // Adiciona ao resumo textual
      const textoEscolhido = pergunta.querySelector(`input[value="${respostasSelecionadas[i]}"]`)?.parentElement.textContent.trim();
      const foiCorreta = respostasSelecionadas[i] === correta;
      if (foiCorreta) corretas++;
  
      resumo += `<li>Questão ${i + 1}: ${textoEscolhido} ${foiCorreta ? "✅" : "❌"}</li>`;
    });
  
    resumo += `</ol><p>Você acertou <strong>${corretas}</strong> de <strong>${perguntas.length}</strong> perguntas!</p>`;
    resultado.innerHTML = resumo;
    resultado.style.display = "block";
    btn.style.display = "none";
  }
  </script>
</body>
</html>
